@{
    Layout = "_EmployeeLayout";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Reimburse Management System</title>
</head>

<body>

    <div class="container-fluid">

        <!-- Table -->
        <div class="card">
            <div class="card-header" style="justify-content: center">
                <h1 class="card-title">REIMBURSEMENT</h1>
            </div>
            <div class="card-body">
                <p>
                    <button type="button" onclick="InsertExpense()" class="btn btn-primary add-expense" @*data-toggle="modal" data-target="#addRequest"*@><i class="fa fa-plus-circle"></i> New Reimbursement Request </button>
                </p>
                <table id="Expense-table" class="table table-hover dt-responsive table-striped nowarp" style="width:100%">
                    <thead class="table-info head-table text-center">
                        <tr class="bg-primary column-tab">
                            <th scope="col" class="text-light text-center"> Date </th>
                            <th scope="col" class="text-light text-center"> Request Id </th>
                            <th scope="col" class="text-light text-center"> Total Expense </th>
                            <th scope="col" class="text-light text-center"> Status </th>
                            <th scope="col" class="text-light text-center"> Action </th>
                        </tr>
                    </thead>
                    <tbody class="text-dark">
                        <tr>
                            <td>data-1</td>
                            <td>data-2</td>
                            <td>data-3</td>
                            <td>data-4</td>
                            <td>data-5</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>


